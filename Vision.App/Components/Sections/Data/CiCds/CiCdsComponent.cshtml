@inject IJSRuntime Runtime
@inject SvgHelper SvgHelper

<table class="table table-striped table-bordered table-sm" style="width: 100%">
    <thead>
        <tr>
            <th>Kind</th>
            <th>Endpoint</th>
            <th>ApiKey</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
        <tr>
            <td class="@item.Kind.GetIconClass()">@SvgHelper.GetSvg(item.Kind)</td>
            <td>@item.Endpoint</td>
            <td>@item.ApiKey</td>
            <td></td>
        </tr>
        }
    </tbody>
</table>

@functions
{
    [Parameter] private CiCdDto[] Items { get; set; }

    protected override async Task OnAfterRenderAsync()
    {
        await Runtime.InvokeAsync<object>("dataTable");
    }
}
