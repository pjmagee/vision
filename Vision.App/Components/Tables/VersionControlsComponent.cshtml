@inject IJSRuntime Runtime
@inject SvgHelper svgHelper

<table class="table table-striped table-bordered table-sm" style="width: 100%">
    <thead>
        <tr>
            <th>Endpoint</th>
            <th>ApiKey</th>
            <th>Repositories</th>
            <th>Kind</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td>
                    <a href="@($"/data/vcs/{item.VersionControlId}")">@item.Endpoint</a>
                </td>
                <td>@item.ApiKey</td>
                <td>@item.Repositories</td>
                <td class="@item.Kind.GetIconClass()">
                    @svgHelper.GetSvg(item.Kind)
                </td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@functions
{
    [Parameter] private VersionControlDto[] Items { get; set; }

    protected override async Task OnAfterRenderAsync()
    {
        await Runtime.InvokeAsync<object>("dataTable");
    }
}
