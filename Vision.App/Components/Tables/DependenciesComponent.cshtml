@inject IJSRuntime Runtime
@inject SvgHelper svgHelper

<table class="table table-striped table-bordered table-sm" style="width: 100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Kind</th>
            <th>Assets</th>
            <th>Versions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                
                <td>
                    <a href="@($"/data/dependencies/{item.DependencyId}")">@item.Name</a>
                </td>
                <td class="@item.Kind.GetIconClass()">
                    @svgHelper.GetSvg(item.Kind)
                </td>
                <td>@item.Assets</td>
                <td>@item.Versions</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@functions {

    [Parameter] private DependencyDto[] Items { get; set; }

    protected override async Task OnAfterRenderAsync()
    {
        await Runtime.InvokeAsync<object>("dataTable");
    }
}
