@page "/sources/{sourceId:guid}/repositories"
@inject HttpClient HttpClient
@inject IJSRuntime Runtime

<HeadingComponent Title="@Title"></HeadingComponent>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Repositories</h6>
    </div>
    <div class="card-body">
        @if (Items != null)
        {
            <table class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Url</th>
                        <th>Assets</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Items)
                    {
                        <tr>
                            <td>@item.WebUrl</td>
                            <td>@item.Assets</td>
                            <td>
                                @{
                                    string href = $"/sources/{sourceId}/repositories/{item.RepositoryId}";
                                }

                                <NavLink class="nav-link" href="@href" Match="NavLinkMatch.All">Browse assets</NavLink>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Loading...</p>
        }

    </div>
</div>

@functions {

    [Parameter] private Guid sourceId { get; set; }

    private RepositoryDto[] Items { get; set; }
    private GitSourceDto GitSource { get; set; }

    public string Title { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        GitSource = await HttpClient.GetJsonAsync<GitSourceDto>($"/api/sources/{sourceId}");
        Items = await HttpClient.GetJsonAsync<RepositoryDto[]>($"/api/sources/{sourceId}/repositories");
        Title = GitSource?.Endpoint + " repositories";
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync()
    {
        await Runtime.InvokeAsync<object>("dataTable");
    }
}
