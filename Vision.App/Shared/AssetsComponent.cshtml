@inject IJSRuntime Runtime

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@nameof(AssetDto.Repository)</th>
            <th>@nameof(AssetDto.Asset)</th>
            <th>@nameof(AssetDto.Dependencies)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td>@item.Repository</td>
                <td>@item.Asset</td>
                <td>@item.Dependencies</td>
                <td>
                    <NavLink class="nav-link" href="@($"/assets/{item.AssetId}")">Details</NavLink>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions {

    [Parameter]
    private AssetDto[] Items { get; set; }

    protected override async Task OnAfterRenderAsync()
    {
        await Runtime.InvokeAsync<object>("dataTable");
    }

}
