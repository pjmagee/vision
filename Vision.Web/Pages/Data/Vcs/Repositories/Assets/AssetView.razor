@page "/data/vcs/{VcsId:guid}/repositories/{RepositoryId:guid}/assets/{AssetId:guid}/"
@inherits OwningComponentBase

<BreadcrumbsComponent AssetId="@AssetId" RepositoryId="@RepositoryId" VcsId="@VcsId" />

<RefreshComponent Target="TaskScopeKind.Asset" Id="@AssetId" />

<MetricsComponent AssetId="@AssetId" />

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Dependencies</h6>
    </div>
    <div class="card-body">
        <AssetDependenciesComponent AssetId="@AssetId" />
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Ecosystems</h6>
    </div>
    <div class="card-body">
        <EcosystemComponent AssetId="@AssetId" />
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Dependent Assets</h6>
    </div>
    <div class="card-body">
        <AssetsComponent AssetId="@AssetId" Dependents="true" />
    </div>
</div>

@code
{
    [Parameter] public Guid AssetId { get; set; }
    [Parameter] public Guid RepositoryId { get; set; }
    [Parameter] public Guid VcsId { get; set; }

    protected override void OnParametersSet()
    {
        StateHasChanged();
    }
}