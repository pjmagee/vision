<table class="table table-striped table-bordered table-sm" style="width: 100%">
    <thead>
        <tr>
            <th>Kind</th>
            <th>Build</th>
            <th>Web Url</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>
                <td class="@item.Kind.GetIconClass()">
                    @SvgService.GetSvg(item.Kind)
                </td>
                <td>@item.Name</td>
                <td>
                    <a href="@item.WebUrl" target="_blank">@item.WebUrl (Open in new window)</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@functions
{
    [Parameter] IEnumerable<CiCdBuildDto> Items { get; set; }

    [Inject] IJSRuntime JSRuntime { get; set; }
    [Inject] SvgService SvgService { get; set; }

    protected override async Task OnAfterRenderAsync()
    {
        await JSRuntime.InvokeAsync<object>("dataTable");
    }
}
