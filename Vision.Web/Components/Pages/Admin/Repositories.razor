@page "/admin/repositories"

<BreadcrumbsComponent>
    <BreadcrumbItem>Data</BreadcrumbItem>
    <BreadcrumbItem>Admin</BreadcrumbItem>
    <BreadcrumbItem IsActive="true"><a href="/data/repositories">Repositories</a></BreadcrumbItem>
</BreadcrumbsComponent>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Disabled repositories</h6>
    </div>
    <div class="card-body">
        <RepositoriesComponent ShowIgnored="true" />
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Enabled repositories</h6>
    </div>
    <div class="card-body">
        <RepositoriesComponent ShowIgnored="false" />
    </div>
</div>