@page "/data/frameworks/{FrameworkId:guid}"

<BreadcrumbsComponent FrameworkId="@FrameworkId"></BreadcrumbsComponent>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Assets</h6>
    </div>
    <div class="card-body">
        <AssetsComponent FrameworkId="@FrameworkId"></AssetsComponent>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Repositories</h6>
    </div>
    <div class="card-body">
        <RepositoriesComponent FrameworkId="@FrameworkId"></RepositoriesComponent>
    </div>
</div>

@functions 
{
    [Parameter] Guid FrameworkId { get; set; }
}
