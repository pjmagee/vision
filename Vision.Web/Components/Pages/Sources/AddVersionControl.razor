@page "/sources/vcs"

<BreadcrumbsComponent>
    <li class="breadcrumb-item">Sources</li>
    <li class="breadcrumb-item active" aria-current="page">Version control system</li>
</BreadcrumbsComponent>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Add new</h6>
    </div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <input type="text" class="form-control" bind="VersionControl.Endpoint" placeholder="Endpoint" />
            </div>
            <div class="form-group">
                <input type="text" class="form-control" bind="VersionControl.ApiKey" placeholder="API Key" />
            </div>
            <div class="form-group">
                <select type="text" class="form-control" bind="VersionControl.Kind" placeholder="Type">
                   @foreach (VersionControlKind kind in Enum.GetValues(typeof(VersionControlKind)).Cast<VersionControlKind>())
                   {
                     <option value="@kind">@kind.ToString()</option>
                   }
                </select>
            </div>
            <button onclick="@Submit" type="button" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@functions 
{
    [Inject] IVersionControlService VersionControlService { get; set; }

    VersionControlDto VersionControl { get; set; } = new VersionControlDto();    

    protected async Task Submit()
    {
        await VersionControlService.CreateVersionControl(VersionControl);
    }
}